{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "SourceRepo": {
            "Description": "The GitHub repo with the source code",
            "Type": "String"
        },
        "ConnectionArn": {
            "Description" : "The connection ARN to connect to the GitHub Repos",
            "Type": "String"
        },
        "CodeBuildProjectName": {
            "Description": "Name for CodeBuild project. Should not already exist",
            "Type": "String"
        },
        "StackName": {
            "Description": "The CloudFormation stack name",
            "Type": "String"
        },
        "TemplateFileName": {
            "Description": "The name of the CloudFormation template",
            "Type": "String"
        },
        "PipelineName": {
            "Description": "The name of the Pipeline to create",
            "Type": "String"
        }
    },
    "Resources": {
        "ArtifactStoreBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "VersioningConfiguration": {
                    "Status": "Enabled"
                },
                "PublicAccessBlockConfiguration": {
                      "BlockPublicAcls" : true,
                      "BlockPublicPolicy" : true,
                      "IgnorePublicAcls" : true,
                      "RestrictPublicBuckets" : true
                }
            }
        },
        "PipelineRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "codepipeline.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path": "/",
                "Policies": [
                    {
                        "PolicyName": "CodePipelinePolicy",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [{
                                "Effect": "Allow",
                                "Action": [
                                    "s3:*",
                                    "cloudformation:CreateStack",
                                    "cloudformation:DescribeStacks",
                                    "cloudformation:DeleteStack",
                                    "cloudformation:UpdateStack",
                                    "cloudformation:CreateChangeSet",
                                    "cloudformation:ExecuteChangeSet",
                                    "cloudformation:DeleteChangeSet",
                                    "cloudformation:DescribeChangeSet",
                                    "cloudformation:SetStackPolicy",
                                    "iam:PassRole",
                                    "sns:Publish",
                                    "codebuild:StartBuild",
                                    "codebuild:StopBuild",
                                    "codebuild:StartBuildBatch",
                                    "codebuild:StopBuildBatch",
                                    "codebuild:RetryBuild",
                                    "codebuild:RetryBuildBatch",
                                    "codebuild:BatchGet*",
                                    "codebuild:GetResourcePolicy",
                                    "codebuild:DescribeTestCases",
                                    "codebuild:DescribeCodeCoverages",
                                    "codebuild:List*",
                                ],
                                "Resource": "*"
                            }]
                        }
                    },
                    {
                        "PolicyName": "CodePipelineCodeStarPolicy",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [{
                                "Effect": "Allow",
                                "Action": [
                                    "codestar-connections:UseConnection"
                                ],
                                "Resource": { "Ref": "ConnectionArn" },
                                "Condition": {"ForAllValues:StringEquals": {"codestar-connections:ProviderPermissionsRequired": "read_only"}}
                            }]
                        }
                    }
                ]
            }
        },
        "CodeBuildRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "codebuild.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path": "/",
                "Policies": [{
                    "PolicyName": "CodeBuildPolicy",
                    "PolicyDocument": {
                        "Version": "2012-10-17",
                        "Statement": [{
                            "Effect": "Allow",
                            "Action": [
                                "s3:*",
                                "logs:CreateLogStream",
                                "logs:PutLogEvents",
                                "logs:CreateLogGroup"
                            ],
                            "Resource": "*"
                        }]
                    }
                }]
            }
        },
        "CloudFormationRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "cloudformation.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path": "/",
                "Policies": [{
                    "PolicyName": "CloudFormationPolicy",
                    "PolicyDocument": {
                        "Version": "2012-10-17",
                        "Statement": [{
                            "Effect": "Allow",
                            "Action": [
                                "lambda:CreateFunction",
                                "lambda:DeleteFunction",
                                "lambda:GetFunction",
                                "lambda:GetPolicy",
                                "lambda:ListFunctions",
                                "lambda:PublishVersion",
                                "lambda:UpdateFunctionCode",
                                "iam:GetRole",
                                "iam:CreateRole",
                                "iam:CreatePolicy",
                                "iam:CreatePolicyVersion",
                                "iam:AttachRolePolicy",
                                "iam:DeleteRole",
                                "iam:DeleteRolePolicy",
                                "iam:GetPolicy",
                                "iam:GetRolePolicy",
                                "iam:ListAttachedRolePolicies",
                                "iam:ListRolePolicies",
                                "iam:PutRolePolicy",
                                "iam:PassRole",
                                "s3:GetObject"
                            ],
                            "Resource": "*"
                        }]
                    }
                }]
            }
        },
        "Pipeline": {
            "Type" : "AWS::CodePipeline::Pipeline",
            "Properties": {
                "Name": { "Ref" : "PipelineName" },
                "ArtifactStore": {
                    "Type": "S3",
                    "Location": {"Ref": "ArtifactStoreBucket"}
                },
                "RoleArn": {"Fn::GetAtt": ["PipelineRole", "Arn"]},
                "Stages": [
                    {
                        "Name": "GitHubSource",
                        "Actions": [
                            {
                                "Name": "Source",
                                "ActionTypeId": {
                                    "Category": "Source",
                                    "Owner": "AWS",
                                    "Provider": "CodeStarSourceConnection",
                                    "Version": "1"
                                },
                                "Configuration": {
                                    "ConnectionArn": { "Ref": "ConnectionArn" },
                                    "FullRepositoryId": { "Ref": "SourceRepo" },
                                    "BranchName": "main"
                                },
                                "RunOrder": 1,
                                "OutputArtifacts": [{
                                    "Name": "source"
                                }]
                            }
                        ]
                    },
                    {
                        "Name": "BuildAndUpload",
                        "Actions": [
                            {
                                "InputArtifacts": [{
                                    "Name": "source"
                                }],
                                "Name": "Build",
                                "ActionTypeId": {
                                    "Category": "Build",
                                    "Owner": "AWS",
                                    "Version": "1",
                                    "Provider": "CodeBuild"
                                },
                                "Configuration": {
                                    "ProjectName": { "Ref": "CodeBuildProjectName" },
                                    "PrimarySource": "source"
                                },
                                "OutputArtifacts": [
                                    {
                                        "Name": "CFNArtifact"
                                    },
                                    {
                                        "Name": "SourceArtifact"
                                    }
                                ],
                                "RunOrder": 1
                            }
                        ]
                    },
                    {
                        "Name": "CloudFormationDeploy",
                        "Actions": [
                            {
                                "Name": "CreateStack",
                                "ActionTypeId": {
                                    "Category": "Deploy",
                                    "Owner": "AWS",
                                    "Provider": "CloudFormation",
                                    "Version": "1"
                                },
                                "InputArtifacts": [
                                    {
                                        "Name": "CFNArtifact"
                                    },
                                    {
                                        "Name": "SourceArtifact"
                                    }
                                ],
                                "Configuration": {
                                    "ActionMode": "REPLACE_ON_FAILURE",
                                    "Capabilities": "CAPABILITY_NAMED_IAM",
                                    "RoleArn": { "Fn::GetAtt": ["CloudFormationRole", "Arn"]},
                                    "StackName": { "Ref": "StackName" },
                                    "TemplatePath": { "Fn::Sub": [
                                        "CFNArtifact::${FileName}", { "FileName": { "Ref": "TemplateFileName" }}
                                    ]},
                                    "ParameterOverrides": { "Fn::Sub": [
                                        "{\"SourceBucket\": \"${BucketName}\", \"SourceKey\": \"{ \"Fn::GetArtifactAtt\": [\"SourceArtifact\", \"ObjectKey\"]}\"}",
                                            { "BucketName": { "Ref": "ArtifactStoreBucket" }}
                                    ]}
                                }
                            }
                        ]
                    }
                ]
            }
        },
        "BuildConfig": {
            "Type": "AWS::CodeBuild::Project",
            "Properties": {
              "Name": { "Ref": "CodeBuildProjectName" },
              "Source": {
                "Type": "CODEPIPELINE",
                "SourceIdentifier": "source"
              },
              "Artifacts": {
                "Type": "CODEPIPELINE",
                "ArtifactIdentifier": "CFNArtifact"
              },
              "SecondaryArtifacts": [
                {
                  "Type": "S3",
                  "Location": {"Ref": "ArtifactStoreBucket"},
                  "ArtifactIdentifier": "SourceArtifact"
                }
              ],
              "Environment": {
                "Type": "LINUX_CONTAINER",
                "Image": "aws/codebuild/standard:4.0",
                "ComputeType": "BUILD_GENERAL1_SMALL"
              },
              "ServiceRole": {"Fn::GetAtt": ["CodeBuildRole", "Arn"]}
            }
        }
    }
}